<Gerenciador_screen>:
    Menu_screen:

<Menu_screen>:
    name: 'menu'
    FloatLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size: 760, 720
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                source: '_img/background.png'
                size: 500, 720
                pos: self.pos
        Button:
            name: 'logo_link'
            background_normal: '_img/cursoemvideo-logo2.png'
            background_down: '_img/cursoemvideo-logo2press.png'
            border: 0, 0, 0, 0
            size_hint: 0.3, 0.18
            pos_hint: {'center_x': 0.18, 'center_y': 0.8}
            on_press: print(root.url_open(self.name))
        Image:
            source: '_img/guana.png'
            size_hint: 0.6, 0.6
            pos_hint: {'center_x': 0.18, 'center_y': 0.3}

    ScrollView:
        pos_hint: {'center_x': 0.8, 'center_y': 0.5}
        size_hint: 0.6, 0.3
        Box_ex:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height


